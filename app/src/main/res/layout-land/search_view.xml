<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:padding="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/HeadingStyle"
        android:fontFamily="@font/shrikhand"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="@string/search_tune_voyage"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/crosley"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/SongTitleStyle"
        android:text="@string/choose_decade"/>

    <Spinner
        android:id="@+id/decade_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/choose_decade"
        android:spinnerMode="dialog"
        android:layout_marginBottom="@dimen/activity_vertical_margin">
    </Spinner>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/SongTitleStyle"
        android:text="@string/choose_continent"/>

    <Spinner
        android:id="@+id/continent_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/choose_continent"
        android:spinnerMode="dialog"
        android:layout_marginBottom="@dimen/activity_vertical_margin">
    </Spinner>

    <ImageView
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/search_icon"
        />
    </LinearLayout>
</ScrollView>